<div class="form-group row">
  <div class="col-xs-6">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-xs-6">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class => 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-xs-6">
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'form-control', :placeholder => 'e.g. john@exmaple.com' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-xs-6">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, :class => 'form-control', :placeholder => 'e.g. 555-555-5555' %>
  </div>
</div>

<div class="form-actions">
  <%= f.submit submit_text, :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', cancel_link, :class => 'btn btn-default' %>
</div>