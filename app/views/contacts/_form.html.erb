<div class="form-group row">
  <div class="col-sm-6 col-xs-10">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-6 col-xs-10">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class => 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-6 col-xs-10">
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'form-control', :placeholder => 'e.g. john@exmaple.com' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-6 col-xs-10">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, :class => 'form-control', :placeholder => 'e.g. 555-555-5555' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-6 col-xs-10">
    <%= f.label :photo %>
    <div class="input-group">
      <span class="input-group-btn">
        <span class="btn btn-default btn-file">
          Browse&hellip; <%= f.file_field :photo %>
        </span>
      </span>
      <input type="text" class="form-control" readonly>
    </div>
  </div>
</div>

<% unless f.object.new_record? || f.object.photo.nil? %>
<div class="checkbox">
  <label>
    <%= f.check_box :remove_photo %> Delete existing photo?
  </label>
</div>
<% end %>

<div class="form-actions">
  <%= f.submit submit_text, :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', cancel_link, :class => 'btn btn-default' %>
</div>